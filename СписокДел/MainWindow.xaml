<Window x:Class="СписокДел.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:СписокДел"
        mc:Ignorable="d"
        Title="Список дел" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dgToDoList" FontSize="14" FontWeight="Bold" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path= CreationDate}" IsReadOnly="True" Header="Дата создания" Width="170"/>
                <DataGridCheckBoxColumn Binding="{Binding Path= Status, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False" Header="Статус" Width="80"/>
                <DataGridTextColumn Binding="{Binding Path= Task}" IsReadOnly="False" Header="Задача" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
